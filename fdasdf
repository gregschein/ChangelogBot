CREATE DATABASE db_stuff
	CHARACTER SET = utf8mb4
	COLLATE = utf8mb4_unicode_ci;

CREATE TABLE heroes
	(
	id int NOT NULL,
	name varchar(64),
	description text,
	PRIMARY KEY (id)
	);


CREATE TABLE patch
	(
	id int NOT NULL AUTO_INCREMENT,
	patch varchar(16),
	PRIMARY KEY (id)
	);

CREATE TABLE heroes_patchnotes
	(
	id int NOT NULL AUTO_INCREMENT,
	hero_id int NOT NULL,
	patch_id int NOT NULL,
	description text,
	PRIMARY KEY (id),
	FOREIGN KEY (hero_id) REFERENCES heroes(id),
	FOREIGN KEY (patch_id) REFERENCES patch(id)
	);

SELECT heroes_patchnotes.id, patch.patch, heroes.name
FROM heroes_patchnotes
LEFT JOIN heroes ON heroes.id = heroes_patchnotes.hero_id
LEFT JOIN patch ON patch.id = heroes_patchnotes.patch_id

"Alchemist 6.75-6.78""